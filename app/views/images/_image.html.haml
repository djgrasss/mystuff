.item.thumbnail
  %a.fancybox.image-fancybox{:href => "{{image_url}}", :title => "{{title}}", :overlay=> "{{description}}", :rel=>"group1"}
    %img.img-thumbnail{:src => "{{image_url}}", :alt=>""}
  .caption
    %h3.img-title {{title}}
    %p.img-detail
      {{description}}
    %a.btn.btn-default{"data-target" => "#item_modal", "data-toggle" => "modal", :href => "#", :role => "button"} More
    %a.close
      %span.btn.glyphicon.glyphicon-remove.delete-item{"item-id" => "{{item_id}}", 'data-toggle'=>'modal', 'data-target' => '#item_delete_modal'}



