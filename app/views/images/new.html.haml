- provide(:title, 'New Image')
%h1.title New Image
.row
  .col-md-6.col-md-offset-3.col-lg-6.col-lg-offset-3
    = form_for(@image) do |f|
      = render partial: 'shared/error_messages', locals:{obj:@image}
      = f.label :image_url, "image_url"
      = f.text_field :image_url
      = f.label :title, "title"
      = f.text_field :title
      = f.label :description, "description"
      = f.text_field :description
      = f.submit "New Image", class: "btn btn-large btn-primary"
