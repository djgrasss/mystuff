- provide(:title, "Sign in")
%h1 Sign in
.row
  .col-lg-6.col-lg-offset-3
    = form_for(:session, url: sessions_path) do |f|
      = f.label :email
      = f.text_field :email
      = f.label :password
      = f.password_field :password
      = f.submit "Sign in", class: "btn btn-large btn-primary"
    .row
    .text-center
      New user? #{link_to "Sign up now!", signup_path}