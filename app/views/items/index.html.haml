#container{:style => "width: 1000px; margin: 0 auto;"}

%script#waterfall-tpl{:type => "text/x-handlebars-template"}
  {{#result}}
  {{#ifCond actable_type '==' 'Image'}}
  .item.thumbnail
    %img.img-thumbnail{:src => "{{image_url}}"}/
    .caption
      %h3 {{title}}
      %p
        {{description}}
        %p
          %p
          %a.btn.btn-default{"data-target" => "#item_modal", "data-toggle" => "modal", :href => "#", :role => "button"} More
  {{else}}
  =render 'texts/text'
  {{/ifCond}}
  {{/result}}

/ Modal
#item_modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
          %span.sr-only Close
        %h4#myModalLabel.modal-title Modal title
      .modal-body
        \...
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
        %button.btn.btn-primary{:type => "button"} Save changes
