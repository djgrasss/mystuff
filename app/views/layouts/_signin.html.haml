- if signed_in?
  %li.dropdown
    %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
      Add
      %span.caret
    %ul.dropdown-menu{:role => "menu"}
      %li.dropdown-header Add Image
      %li
        = link_to "Upload", new_image_path
      %li
        %a{:href => "images/new"} From URL
      %li.divider
      %li
        = link_to "Add Text", new_text_path
  %li.dropdown
    %a.dropdown-toggle{"data-toggle" => "dropdown", :href=>"#" }
      Account
      %span.caret
    %ul.dropdown-menu{:role => "menu"}
      %li= link_to "Profile", current_user
      %li= link_to "Settings", edit_user_path(current_user)
      %li.divider
      %li= link_to "Sign out", signout_path, method: "delete"
- else
  %li= link_to "Sign in", signin_path
  %li= link_to "Signup", signup_path
